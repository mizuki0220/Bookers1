<%= stylesheet_link_tag 'show' %>

<% if @book.errors.any? %>
  <%= @book.errors.count %>件のエラーが発生しました
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<p class="show-title"><strong>Title: </strong><%= @book.title %></p>
<p class="show-body"><strong>Body: </strong><%= @book.body %></p>

<%= link_to 'Edit', edit_book_path(@book) %>
|
<%= link_to 'Back', "/books" %>
