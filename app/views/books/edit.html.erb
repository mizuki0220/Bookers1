<h1>Editing Book</h1>
<% if @book.errors.any? %>
  <%= @book.errors.count %>件のエラーが発生しました
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @book do |f| %>

  <p>Title<br>
  <%= f.text_field :title %>
  </p>
  
  <p>Body<br>
  <%= f.text_area :body %>
  </p>
  
  <%= f.submit 'Update Book' %>
  
<% end %>

<%= link_to 'Show', @book %>
|
<%= link_to 'Back', "/books" %>

